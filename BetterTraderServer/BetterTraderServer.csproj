<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>Menthus15Mods.Valheim.BetterTraderServer</RootNamespace>
    <TargetFramework>net462</TargetFramework>
    <LangVersion>10</LangVersion>
    <AssemblyTitle>BetterTraderServer</AssemblyTitle>
    <AssemblyName>BetterTraderServer</AssemblyName>
    <LangVersion>10</LangVersion>
    <IsPublishable>False</IsPublishable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <DebugType>pdbonly</DebugType>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://github.com/MarvelProgramming/BetterTrader</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MarvelProgramming/BetterTrader</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Authors>Menthus, Digitalroot</Authors>
    <Company>Menthus15Mods</Company>
    <Product>BetterTraderServer</Product>
    <Description>BetterTraderServer for Valheim</Description>
    <NeutralLanguage>en-US</NeutralLanguage>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
    <RestoreAdditionalProjectSources>
      https://nuget.bepinex.dev/v3/index.json;
    </RestoreAdditionalProjectSources>
    <VersionPrefix>3.0.0</VersionPrefix>
    <Copyright>Copyright © Menthus 2021 - 2023</Copyright>
    <Configurations>Debug;Release</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <AutoGen>True</AutoGen>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Content Include="FodyWeaver.xml" />
    <Content Include="FodyWeavers.xml" />
    <Content Include="pdb2mdb.exe" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BepInEx.Core" Version="5.4.21">
      <IncludeAssets>compile; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <ExcludeAssets>runtime</ExcludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Digitalroot.Valheim.Common.References" Version="0.216.902">
      <PrivateAssets>all</PrivateAssets>
      <ExcludeAssets>runtime</ExcludeAssets>
      <IncludeAssets>compile; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Fody" Version="[6.6.0]">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="ILMerge.Fody" Version="[1.22.0]">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <None Include="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BetterTraderLibrary\BetterTraderLibrary.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <!-- ToDo: Clean this up w/ MSBuild -->
    <Exec Command="      if NOT &quot;$(VALHEIM_INSTALL)&quot; == &quot;&quot; (&#xD;&#xA;      if NOT EXIST &quot;$(BT_INSTALL)&quot; (&#xD;&#xA;      mkdir &quot;$(BT_INSTALL)&quot;&#xD;&#xA;      )&#xD;&#xA;      )&#xD;&#xA;&#xD;&#xA;      if NOT &quot;$(VALHEIM_DEDICATED_INSTALL)&quot; == &quot;&quot; (&#xD;&#xA;      if NOT EXIST &quot;$(BT_DEDICATED_INSTALL)&quot; (&#xD;&#xA;      mkdir &quot;$(BT_DEDICATED_INSTALL)&quot;&#xD;&#xA;      )&#xD;&#xA;      )&#xD;&#xA;&#xD;&#xA;      echo &quot;Valheim dedicated install is set to $(VALHEIM_DEDICATED_INSTALL) and bt dedicated install to $(BT_DEDICATED_INSTALL)&quot;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;      if EXIST &quot;$(BT_INSTALL)&quot; (&#xD;&#xA;      xcopy &quot;$(TargetPath)&quot; &quot;$(BT_INSTALL)&quot; /Y&#xD;&#xA;      )&#xD;&#xA;&#xD;&#xA;      if EXIST &quot;$(BT_DEDICATED_INSTALL)&quot; (&#xD;&#xA;      xcopy &quot;$(TargetPath)&quot; &quot;$(BT_DEDICATED_INSTALL)&quot; /Y&#xD;&#xA;      )&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;      if &quot;$(ConfigurationName)&quot; == &quot;Debug&quot; (&#xD;&#xA;      cd &quot;$(TargetDir)&quot;&#xD;&#xA;      &quot;$(ProjectDir)pdb2mdb.exe&quot; &quot;$(TargetPath)&quot;&#xD;&#xA;      if EXIST &quot;$(BT_INSTALL)&quot; (&#xD;&#xA;      xcopy &quot;$(TargetDir)$(TargetName).dll.mdb&quot; &quot;$(BT_INSTALL)&quot; /Y&#xD;&#xA;      )&#xD;&#xA;      if EXIST &quot;$(BT_DEDICATED_INSTALL)&quot; (&#xD;&#xA;      xcopy &quot;$(TargetDir)$(TargetName).dll.mdb&quot; &quot;$(BT_DEDICATED_INSTALL)&quot; /Y&#xD;&#xA;      )&#xD;&#xA;      )&#xD;&#xA;    " />
  </Target>
</Project>